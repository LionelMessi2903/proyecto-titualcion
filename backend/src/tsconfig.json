{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
